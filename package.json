{
	"name": "the-big-brown-frontend",
	"version": "1.0.0",
	"description": "Frontend for a restaurant's website. This is just the design / interactivity / idea.",
	"main": "index.js",
	"posthtml": {
		"plugins": {
			"posthtml-include": {},
			"posthtml-beautify": {
				"rules": {
					"indent": 4,
					"blankLines": false
				}
			}
		}
	},
	"postcss": {
		"plugins": {
			"cssnano": {},
			"autoprefixer": {}
		}
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"clean": "rimraf ./docs/*",
		"package": "parcel ./app/index.html --open --no-source-maps --out-dir ./docs --public-url /the-big-brown-frontend/",
		"post": "npm-run-all clean package"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.7.5",
		"@babel/preset-env": "^7.7.6",
		"autoprefixer": "^9.7.3",
		"copyfiles": "^2.1.1",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"posthtml-beautify": "^0.2.6",
		"posthtml-include": "^1.3.2",
		"sass": "^1.23.7"
	}
}
